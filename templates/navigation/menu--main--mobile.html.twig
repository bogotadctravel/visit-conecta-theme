<nav
  class="top-nav__mobile-menu"
  id="mobile-quick-nav"
  aria-label="Accesos rápidos"
  aria-hidden="true"
>
  <div class="top-nav__mobile-list" role="menu">
    <div class="top-nav__mobile-handle" aria-hidden="true">
      <span class="top-nav__mobile-handle-dot"></span>
      <span class="top-nav__mobile-handle-dot"></span>
      <span class="top-nav__mobile-handle-dot"></span>
    </div>

    {% for item in items %}
      <a
        class="top-nav__mobile-link"
        role="menuitem"
        href="{{ item.url }}"
        style="--mobile-index: {{ loop.index0 }}"
      >
        {# Icono: opcional, puedes agregarlo según el item.title si quieres #}
        {# <span class="top-nav__mobile-icon" aria-hidden="true"> ... </span> #}

        <span class="top-nav__mobile-text">
          {{ item.title }}
        </span>
      </a>
    {% endfor %}

  </div>
</nav>
